  "repository": {
    "type": "git",
    "url": "https://github.com/chemzqm/node-client"
  },
  "bugs": {
    "url": "https://github.com/chemzqm/node-client/issues"
  },
  "license": "MIT",
  "bin": {
    "neovim-node-host": "./bin/cli.js"
  },
  "files": [
    "scripts/nvim.js",
    "scripts/api.js",
    "bin/",
    "lib/"
  ],
  "main": "./lib/index",
  "typings": "./lib/index",
  "dependencies": {
    "babel-eslint": "^8.2.6",
    "msgpack-lite": "^0.1.26",
    "traverse": "^0.6.6"
  },
  "devDependencies": {
    "@types/jest": "^23.3.1",
    "@types/msgpack-lite": "^0.1.6",
    "@types/node": "^10.7.1",
    "@types/traverse": "^0.6.32",
    "@types/which": "^1.3.1",
    "babel-core": "^6.26.3",
    "eslint": "^5.3.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^3.0.1",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-typescript": "^0.12.0",
    "jest": "^23.5.0",
    "lint-staged": "^7.2.2",
    "nodemon": "^1.18.3",
    "prettier": "^1.14.2",
    "ts-jest": "^23.1.3",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-eslint-rules": "^5.4.0",
    "typescript": "^3.0",
    "typescript-eslint-parser": "^18.0.0",
    "which": "^1.3.1"
  },
  "scripts": {
    "prepublishOnly": "npm run build",
    "test": "jest",
    "test-build": "npm run build && npm run prep-integration-test && jest --runInBand --coverage",
    "test-staged": "jest --bail --no-cache --findRelatedTests",
    "test-missing-apis": "yarn build && node scripts/findMissingApi",
    "test-lint": "npm run lint",
    "lint": "eslint src/**/*.ts && tslint -p tsconfig.json",
    "prep-integration-test": "cd __tests__/integration/rplugin/node/test_2 && npm install && npm run build",
    "build": "tsc --pretty -p tsconfig.json",
    "watch": "tsc --pretty -p tsconfig.json --watch true"
  },
  "lint-staged": {
    "*.{ts,js}": [
      "prettier --write --config .prettierrc",
      "eslint --fix",
      "tslint --fix",
      "npm run test-staged"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.ts$",
    "coverageDirectory": "./coverage/"
  },
  "keywords": [
    "neovim",
    "neovim-client",
    "node-host",
    "node-client",
    "nvim",
    "nvim-client",
    "vim"
  ]
}
